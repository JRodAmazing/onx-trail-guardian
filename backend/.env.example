# Application Settings
APP_NAME=Trail Guardian Pro
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development
SECRET_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trailguardian

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# NASA FIRMS API (FREE - Get from https://firms.modaps.eosdis.nasa.gov/api/)
FIRMS_API_KEY=your_firms_api_key_here

# Mapbox (FREE TIER - Get from https://account.mapbox.com/)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# NOAA Weather (FREE - No key required)
NOAA_API_KEY=

# OpenAI (OPTIONAL - For ML features)
OPENAI_API_KEY=

# AWS S3 (OPTIONAL - For photo uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=trailguardian-photos
AWS_REGION=us-west-2

# Notifications (OPTIONAL)
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Monitoring (OPTIONAL)
SENTRY_DSN=

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
